.page.header
  %p{:style => "color: green"}= notice
  %h1.mb-4
    = t('application.list_of', model: t('activerecord.modules.director.other'))
    .float-right
      = link_to t('application.new', model: t('activerecord.modules.director.one')), new_director_path, class: "btn btn-primary"
  
  %table.table.table-striped
    %thread
      %tr
        %th= t('activerecord.attributes.director.first_name')
        %th= t('activerecord.attributes.director.last_name')
        %th
        %th
    %tbody
      - @directors.each do |director|
        %tr
          %td= director.first_name
          %td= director.last_name
          %td= link_to t('application.show', model: t('activerecord.modules.director.one')), director, class: "btn btn-info"
          %td= link_to t('application.edit', model: t('activerecord.modules.director.one')), edit_director_path(director), class: "btn btn-success"
          %td= link_to t('application.remove', model: t('activerecord.modules.director.one')), director, method: :delete, class: "btn btn-danger",
                                data: {confirm: "Â¿Desea eliminarlo?",
                                accept: "OK",
                                reject: "Cancelar"}
