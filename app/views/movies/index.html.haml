.page.header
  %p{:style => "color: green"}= notice
  %h1.mb-4
    = t('application.list_of', model: t('activerecord.modules.movie.other'))
    .float-right
      = link_to t('application.new', model: t('activerecord.modules.movie.one')), new_movie_path, class: "btn btn-primary"
  
  %table.table.table-striped
    %thread
      %tr
        %th= t('activerecord.attributes.movie.name')
        %th= t('activerecord.attributes.movie.year')
        %th= t('activerecord.attributes.movie.director.Director')
        %th
        %th
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.name
          %td= movie.year
          %td= movie.director.first_name
          %td= link_to t('application.show', model: t('activerecord.modules.movie.one')), movie, class: "btn btn-info"
          %td= link_to t('application.edit', model: t('activerecord.modules.movie.one')), edit_movie_path(movie), class: "btn btn-success"
          %td= link_to t('application.remove', model: t('activerecord.modules.movie.one')), movie, method: :delete, class: "btn btn-danger",
                                data: {confirm: "Â¿Desea eliminarlo?",
                                accept: "OK",
                                reject: "Cancelar"}
